<?xml version='1.0' encoding='utf-8'?>
<widget id="com.developerlevel.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DeveloperLevel</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="http://app.developerlevel.com" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <splash height="480" src="www/img/img/icon.png" width="320" />
        <splash height="960" src="www/img/img/icon.png" width="640" />
        <splash height="1024" src="www/img/img/icon.png" width="768" />
        <splash height="2048" src="www/img/img/icon.png" width="1536" />
        <splash height="768" src="www/img/img/icon.png" width="1024" />
        <splash height="1536" src="www/img/img/icon.png" width="2048" />
        <splash height="1136" src="www/img/img/icon.png" width="640" />
        <splash height="1334" src="www/img/img/icon.png" width="750" />
        <splash height="2208" src="www/img/img/icon.png" width="1242" />
    </platform>
    <plugin name="cordova-plugin-dialogs" spec="^2.0.1" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.1" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <engine name="ios" spec="^4.5.5" />
</widget>
